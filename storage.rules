rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}/{allPaths=**} {
      // Allow anybody to view avatars
      allow read: if true;
      // Only the user themselves can upload to their own avatar folder
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Structured storage for incidents
    match /incidents/{userId}/{fileName} {
      // Allow all authenticated users to read incident evidence (needed for admin views)
      allow read: if request.auth != null;
      // Only the reporting user can upload to their subfolder
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 20 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }

    // Structured storage for vehicle washes
    match /washes/{userId}/{fileName} {
      // Allow all authenticated users to read wash proof
      allow read: if request.auth != null;
      // Only the reporting user can upload to their subfolder
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 20 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }

    // Structured storage for tire pressure checks
    match /tires/{userId}/{fileName} {
      // Allow all authenticated users to read tire proof
      allow read: if request.auth != null;
      // Only the reporting user can upload to their subfolder
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 20 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // Legacy support for root incidents path (if any)
    match /incidents/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                    && request.resource.size < 20 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
